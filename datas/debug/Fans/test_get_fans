tests:
  - desc: '登录帐号，获取token'
    http:
      path: 'https://test.api.pokekara.com/api/user/login'
      headers: {'Content-Type': 'application/x-www-form-urlencoded'}
      body: {platform: 4, token: login, id_token: '+8618515588536', secret: '111111'}
    expected:
      code: 200
      err_msg: 'success'
  - desc: '获取登录用户第一页粉丝数'
    http:
      path: '/api/user/relationship/followers'
      header: {Cookie: '', Host: 'test.api.pokekara.com'}
      params: {t_uid: '', page_index: 0}
    expected:
      code: 200
      data: {}
  - desc: '获取登录用户第二页粉丝数户'
    http:
      path: '/api/user/relationship/followers'
      header: {Cookie: '', Host: 'test.api.pokekara.com'}
      params: {t_uid: '', page_index: 1}
    expected:
      code: 200
      data: {}
  - desc: '获取登录用户第一万页粉丝数，正常为空，但是不报错'
    http:
      path: '/api/user/relationship/followers'
      header: {Cookie: '', Host: 'test.api.pokekara.com'}
      params: {t_uid: '', page_index: 10000}
    expected:
      code: 200
      data: {has_more: false}

